<div class="dj-card">
  <%= link_to dj_path(dj), class: "text-decoration-none" do %>
  <div class="dj-card-img-top">
    <%= image_tag dj.picture, class: "dj-card-img w-100", alt: "dj-picture" %>
  </div>
  <div class="dj-card-content d-flex flex-column">
    <div class="d-flex justify-content-between">
      <div class="dj-card-heading" ><%= dj.name %></div>
      <div class="dj-card-text" ><i class="fa-solid fa-music"></i>  <%= dj.genre%>  <i class="fa-solid fa-music"></i></div>
    </div>
    <div class="d-flex justify-content-between">
      <div class="dj-card-price" > Price/night: â‚¬<%= dj.price_per_day %></div>
      <div class="dj-card-price" >  <i class="fa-sharp fa-solid fa-location-dot">  </i>Location :<%= dj.location %></i></div>
    </div>
  </div>
<% end  %>
</div>
