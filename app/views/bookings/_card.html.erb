<div class="booking-card-sl">
    <div class="booking-card-image-top">
        <%= image_tag booking.dj.picture, class: "booking-card-image w-100", alt: "dj-picture" %>
    </div>
    <div class="booking-card-heading">
        <%= booking.dj.name %>
    </div>
    <div class="booking-card-text">
        Agent: <%= booking.dj.user.first_name %> <%= booking.dj.user.last_name %>
    </div>
    <div class="booking-card-text">
        Total: â‚¬<%=(booking.dj.price_per_day * (booking.date_end - booking.date_begin)).to_i %>
    </div>
    <div class="booking-card-text">
        <%= booking.date_begin.strftime('%d %b. %Y') %> - <%= booking.date_end.strftime('%d %b. %Y') %>
    </div>
    <% if booking.status == 0 %>
      <div class="booking-card-status" style="background-color: orange">
        <p style="font-size: 14px">Pending</p>
        <%= button_to  "cancel", booking_cancel_path(booking), method: :post, class: "btn btn-danger" %>
      </div>
    <% elsif booking.status == 1 %>
        <div class="booking-card-status" style="background-color: green">
            <p style="font-size: 14px">Accepted</p>
            <%= button_to  "cancel", booking_cancel_path(booking), method: :post, class: "btn btn-danger" %>
        </div>
    <% elsif booking.status == 2 %>
      <p class="booking-card-status" style="font-size: 14px">Declined</p>
    <% else %>
      <p class="booking-card-status" style="font-size: 14px; background-color: red">Canceled</p>
    <% end %>
</div>
