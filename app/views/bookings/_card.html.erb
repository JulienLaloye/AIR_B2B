<div class="booking-card-sl">
    <div class="booking-card-image-top">
        <%= image_tag booking.dj.picture, class: "booking-card-image w-100", alt: "dj-picture" %>
    </div>
    <div class="booking-card-heading">
        <%= booking.dj.name %>
    </div>
    <div class="booking-card-text">
        Agent: <%= booking.dj.user.first_name %> <%= booking.dj.user.last_name %>
    </div>
    <div class="booking-card-text">
        Total: â‚¬<%=(booking.dj.price_per_day * (booking.date_end - booking.date_begin)).to_i %>
    </div>
    <div class="booking-card-text">
        <%= booking.date_begin.strftime('%d %b. %Y') %> - <%= booking.date_end.strftime('%d %b. %Y') %>
    </div>
    <% if booking.status == 0 %>
          <h3 class="booking-card-text">Status: pending</h3>
          <%= button_to  "Cancel", booking_cancel_path(booking), method: :post, class: "button font color-main w-100", style: "border-radius: 0px 0px 8px 8px; border: none" %>
    <% elsif booking.status == 1 %>
          <h3 class="booking-card-text">Status: accepted</h3>
          <%= button_to  "Cancel", booking_cancel_path(booking), method: :post, class: "button font color-main w-100", style: "border-radius: 0px 0px 8px 8px; border: none" %>
    <% elsif booking.status == 2 %>
      <h3 class="booking-card-text">Status: declined</h3>
    <% else %>
      <h3 class="booking-card-text">Status: canceled</h3>
    <% end %>
</div>
