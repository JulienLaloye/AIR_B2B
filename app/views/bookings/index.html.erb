<div class="container">
  <h1 class="p-3"> My bookings </h1>
    <div class="card-container" data-controller="bookings">
      <% @bookings.each do |booking| %>
        <%= render "card", booking: booking %>
    <% end %>
  </div>
<%# container with the bookings of the DJs I own%>
<div class="container">
  <h1>My DJ's bookings</h1>
  <ul class="d-grid gap-3">
  <% @bookings_djs.each do |bookings| %>
    <li class="card">
    <h4><%= @bookings_djs.last.last.dj.name %></h4>
      <ol>
        <% @bookings.each do |booking| %>
          <li>
            <%= booking.user.location %>
            <div class="flex align-items-center">
              <%= booking.date_begin.strftime('%d %B %Y') %> to <%= booking.date_end.strftime('%d %B %Y') %>
              <%# put java script here to have a text-box containing the review, it can be changed on the fly %>
              <%# <%= booking.reviews.where(type_of_review: 1).last.present? ? booking.reviews.where(type_of_review: 1).last.comment : "" %>
            </div>
          </li>
        <% end %>
      </ol>
    </li>
  <% end%>
  </ul>
</div>
</div>
